#!/usr/bin/env zsh
SESSION=<%= PROJECT_NAME %>
FOLDER=<%= PROJECT_PATH %>

tmux -2 new-session -d -s $SESSION

# Setup a window for IDE
tmux rename-window -t $SESSION:1 IDE

# Set up the splits
tmux split-window -v

# Provision the splits
tmux select-pane -t 1
tmux send-keys "cd $FOLDER; and vim ." C-m
if [ -f Guardfile ]; then
  tmux split-window -h
  tmux select-pane -t 2
  tmux send-keys "cd $FOLDER; and while bundle exec guard -c; do echo "Restarting Guard..."; done" C-m
  tmux resize-pane -x 80
  tmux select-pane -t 3
else
  tmux select-pane -t 2
fi
tmux send-keys "cd $FOLDER; and clear" C-m
tmux resize-pane -y 10

# Setup a window for Background Tasks
tmux new-window -t $SESSION:2 -n 'BT'

# Provision the BT Window
tmux split-window -h
tmux select-pane -t 1
tmux send-keys "cd $FOLDER; and be rails s" C-m

# Move to IDE window
tmux select-window -t $SESSION:1
# Attach to session
tmux -2 attach-session -t $SESSION
